<scroll-view scroll-y style="height: 100%;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
<view class='container' style="background: url('../../../../../../picture/杭州.jpg')">
  <view class="box">
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">中文名称</text></view>
      <view class="box-2"><text class="word-2">外滩</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">外文名称</text></view>
      <view class="box-2"><text class="word-2">The Bund</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">地理位置</text></view>
      <view class="box-2"><text class="word-2">上海市黄浦区，黄浦江西岸</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">开放时间</text></view>
      <view class="box-2"><text class="word-2">全天</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">门票价格</text></view>
      <view class="box-2"><text class="word-2">免费开放</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">著名景点</text></view>
      <view class="box-2"><text class="word-2">外白渡桥、黄浦公园、沙逊大厦、百老汇大厦等</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">建筑年代</text></view>
      <view class="box-2"><text class="word-2">1906年－1937年</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">保护类别</text></view>
      <view class="box-2"><text class="word-2">全国重点文物保护单位</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">称号</text></view>
      <view class="box-2"><text class="word-2">外滩万国建筑博览群</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">古典大楼数量</text></view>
      <view class="box-2"><text class="word-2">52幢</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">长度</text></view>
      <view class="box-2"><text class="word-2">1.5公里</text></view>
    </view>
  </view>
</view>
</scroll-view>