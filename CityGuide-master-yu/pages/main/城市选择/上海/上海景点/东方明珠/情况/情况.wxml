      <view class="box-2"><text class="word-2">8:00-21:30</text></view>
    </view>
    <view class="box-1" style="flex-direction:row;">
      <view class="box-2"><text class="word-1">塔高</text></view>
      <view class="box-2"><text class="word-2">约468米</text></view>
    </view>
  </view>
</view>
</scroll-view>